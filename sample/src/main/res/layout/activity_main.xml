<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wmlove="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content" tools:context=".MainActivity">


    <wmlove.library.CalendarView
        wmlove:viewinview="false"
        android:id="@+id/calendarview1"
        android:layout_width="wrap_content"
        android:layout_height="350dp">
    </wmlove.library.CalendarView>


    <TextView
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:id="@+id/dateTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <wmlove.library.CalendarView
        android:layout_marginTop="10dp"
        wmlove:viewinview="true"
        android:id="@+id/calendarview2"
        android:layout_width="wrap_content"
        android:layout_height="95dp">
    </wmlove.library.CalendarView>


    <TextView
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:id="@+id/dateTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
